<div class="container">
  <div class="row">
    <%= link_to("< Back To Search", root_path, class: "btn btn-primary") %>
    &nbsp;
    <a href="/movies/<%= @movie['id'] %>/favorite" class="btn btn-primary">Favorite</a>
  </div>
  <div class="row">
    <img class="full-image" src="<%= poster_link(@movie['backdrop_path']) %>">
  </div>
  <div class="row">
    <h4 class="card-title"><%= @movie['title'] %></h4>
    <p class="card-text"><%= @movie['overview'] %></p>
  </div>
</div>
